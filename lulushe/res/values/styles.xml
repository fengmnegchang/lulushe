<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--  <item name="android:windowIsTranslucent">true</item>-->
    </style>
    
    
    <style name="SlideFinishTheme" parent="@android:style/Theme.Translucent">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--  <item name="android:windowIsTranslucent">true</item>-->
    </style>
    
    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>
    
     <style name="side_slip_listview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/white</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@null</item>
    </style>

</resources>
